{
	"compilerOptions": {
		"target": "es5",
		"lib": ["es2018", "dom"],
		"sourceMap": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"paths": { "~/*": ["./*/src"] },
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	}
}
