{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2018", "dom"],
    "types": ["node", "jasmine"],
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noImplicitUseStrict": true,
    "declaration": true
  },
  "include": ["./src/**/*"]
}
